<!--show all user surveys, show all my surveys button, view this survey by owner, can (rename - change edit button) survey, view survey rename to view questions, delete, results (t/f) column // mostly done, survey title-->

<table id="auth-user-survey-table" class="table table-striped signed-in-view">

 <thead>
    <tr>
    <th>{{survey.title}}</th>
    </tr>
  </thead>
{{#each surveys as |survey|}}
      <tr>
        <td>{{survey.title}}</td>
        <td>{{survey.owner}}</td>
        <td><button surveyId="{{survey.id}}" type="click" class="btn btn-danger view-questions-button">View Questions</button></td>
        <td><button userId="{{user.id}}" type="click" class="btn btn-danger delete-auth-survey-button">Delete Question</button></td>
        <td><form class="update-survey-by-id-form" userId="{{user.id}}">
            <input type="text" id="update-auth-survey-by-id-button" name="survey[title]">
            <input type="hidden" name="id" value="{{user.id}}">
        <button userId="{{user.id}}" type="submit" task="text" class="btn btn-info update-survey-button">Edit Question</button>
      </form>
      </tr>
  {{/each}}
</table>
