<!-- unauthorized, view question for rando: loads question in survey, load in a way to answer not edit -->

<table id="auth-user-survey-table" class="table table-striped signed-in-view">

 <thead>
    <tr>
      <th>Question Prompt</th>
    </tr>
  </thead>
{{#each questions as |question|}}
      <tr>
        <td>{{question.prompt}}</td>
        <td><button surveyId="{{question.id}}" type="click" class="btn btn-danger view-questions-button">View Survey</button></td>
        <td>answer handling here</td>
        <td><form class="update-question-by-id-form" userId="{{user.id}}">
            <input type="text" id="update-auth-question-by-id-button" name="question[title]">
            <input type="hidden" name="id" value="{{user.id}}">
        <button userId="{{user.id}}" type="submit" task="text" class="btn btn-info update-question-button">Edit</button>
      </form>
      </tr>
  {{/each}}
</table>
